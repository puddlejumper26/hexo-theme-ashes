 .archive-title
   color darkgray
   font-weight normal
   margin-bottom 10px
   text-shadow 0 0 1px #fff
   &:before
     font-family font-icon
     content '\f073'
     padding-right 15px

   &.tag
     &:before
       content '\f02b'

   &.category
     &:before
       content '\f07b'

