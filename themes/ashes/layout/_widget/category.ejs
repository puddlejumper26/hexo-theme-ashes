<% if (site.categories.length){ %>
	<div class="widget tag">
	  <h2 class="title"><%= __('categories') %></h2>
	  <ul class="entry">
	  <% site.categories.sort('name').each(function(item){ %>
	    <li>
	    	<a href="<%- config.root %><%- item.path %>"><%= item.name %></a><small><%= item.posts.length %></small>
	    </li>
	  <% }); %>
	  </ul>
	</div>
<% } %>